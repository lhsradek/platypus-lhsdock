#!/usr/bin/env bash

read_var() {
    VAR=$(grep -m 1 "$1" "$2" | xargs)
    IFS="=" read -ra VAR <<< "$VAR"
    echo "${VAR[1]}"
}

DOCKER_NETWORK=$(read_var DOCKER_NETWORK .env)

scriptPath="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
rootPath="$(dirname "${scriptPath}")"

if [[ ! -f "$rootPath/.env" ]]; then
    echo "ERROR: File .env not found";
    echo;
    exit 1;
fi

RUNENV=$1

if [[ -z "$RUNENV" ]]; then
    RUNENV="local"
fi

if [[ ! -f "$rootPath/docker-compose-es.yml" ]]; then
    echo "ERROR: File docker-compose-es.yml not found.";
    echo;
    exit 1;
fi

ARGS="-f $rootPath/docker-compose-es.yml"

if (docker network inspect "${DOCKER_NETWORK}" >/dev/null 2>&1); then
    docker-compose ${ARGS} down --remove-orphans
fi
